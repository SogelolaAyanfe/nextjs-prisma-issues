{
    "printWidth": 90,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false, 
    "importOrderGroupNamespaceSpecifiers": true,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.config.js",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "tailwindFunctions": ["clsx", "tw"],
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
    "tailwindStylesheet": "./styles/global.css"
}
