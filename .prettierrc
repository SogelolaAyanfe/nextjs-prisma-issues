{
    "printWidth": 90,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false,
    "importOrder": [
        "^react(.*)$",
        "^@chakra-ui/(.*)$",
        "^next(.*)$",
        "<THIRD_PARTY_MODULES>",
        "^entities/(.*)$",
        "^routes$",
        "^lib/(.*)$",
        "^hocs/(.*)$",
        "^hooks/(.*)$",
        "^containers/(.*)/hooks$",
        "^containers/(.*)/queries$",
        "^containers/(.*)$",
        "^components/(.*)$",
        "^theme/(.*)$",
        "^public/(.*)$",
        "^[./]"
    ],
    "importOrderGroupNamespaceSpecifiers": true,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.config.js",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
